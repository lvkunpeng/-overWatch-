.container {
  display: flex;
  flex-direction: column;
}

.detail-img {
  width: 100%;
  height: 400rpx;
}

.detail-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  margin-top: 15px;
}

.detail-head {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}

.detail-author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
  line-height: 30px;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 15rpx;
  vertical-align: middle;
  margin-top: 8px;
}

.const-date {
  font-size: 20rpx;
  margin-left: 40rpx;
  margin-top: 8rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.detail-title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2rpx;
  color: #4b556c;
}

.detail-tool {
  margin-top: 20rpx;
}

.detail-circle {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.detail-circle image {
  width: 90rpx;
  height: 90rpx;
}

.detail-share {
  margin-left: 30rpx;
}

.detail-line {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -999;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2rpx;
}

.detail-play {
   width: 100rpx;
   height: 100rpx;
   position: absolute;
   top: 30rpx;
   right: 40rpx;
   opacity: 0.7;
}
